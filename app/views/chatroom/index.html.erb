<h2 class="ui center aligned medium icon header">
  <i class="circular orange coffee icon"></i><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">
  Say Something
</font></font></h2>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
          <%= render @messages %>
        </div>
      </div>
      <div class="event">
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid icon input">
              <input type="text" placeholder="Enter a message...">
              <i class="bordered inverted orange edit icon"></i>
            </div>
          </div>
        </form>
        </div>
      </div>
    </div>
  </div>
  
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item"><font style="vertical-align: inherit;">
            Home
          </font></a>
          <a class="item"><font style="vertical-align: inherit;">
            Messages
          </font></a>
          <a class="item"><font style="vertical-align: inherit;">
            Friends
          </font></a>
        </div>
      </div>
    </div>
  </div>

</div>
